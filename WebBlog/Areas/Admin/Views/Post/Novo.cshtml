    @section Scripts{
        @Html.Partial("_Scripts")
        <script>
        $("input[name = 'Categoria']").autocomplete({
            source: function (request, response) {
                $.post(
                    "@Url.Action("CategoriaAutocomplete")",
                    {
                        termoDigitado:

                            request.term
                    }, function (data) {
                        response(data);
                    }
                )
            }

        })
        $.("body").validate()
        </script>
    }

</body>




























































