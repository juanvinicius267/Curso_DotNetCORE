
@{
    ViewData["Title"] = "Novo";

}

@model WebBlog.Models.Post
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/estilo-admin.css" rel="stylesheet" />
    <link href="~/css/jquery-ui.css" rel="stylesheet" type="text/css" />
    <h2>Novo</h2>

</head>
<body>
    <div>
        @using (@Html.BeginForm("Adiciona", "Post"))
        {
            @Html.LabelFor(p => p.Titulo)
            @Html.TextBoxFor(p => p.Titulo)
            @Html.ValidationMessageFor(p => p.Titulo)

            @Html.LabelFor(p => p.Resumo)
            @Html.TextBoxFor(p => p.Resumo)
            @Html.ValidationMessageFor(p => p.Resumo)

            @Html.LabelFor(p => p.Categoria)
            @Html.TextBoxFor(p => p.Categoria)
            @Html.ValidationMessageFor(p => p.Categoria)

            <button class="btn btn-primary" type="submit">Cadastrar</button>

        }
    </div>
