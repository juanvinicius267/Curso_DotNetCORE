

@model IList<WebBlog.Models.Post>

<h2>Index Post</h2>
<head>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/estilo-admin.css" rel="stylesheet" />
</head>
<table class="table table-striped table-hover table-bordered" >
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Resumo</th>
            <th>Categoria</th>
            <th>Publicado</th>
            <th>Açôes</th>
        </tr>
    </thead>
</table>
<tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>
                @p.Titulo
            </td>
            <td>
                @p.Resumo
            </td>
            <td>
                @p.Categoria
            </td>
            <td>
                @if (p.Publicado)
                {
                    @Html.Raw(string.Format("{0:dd/mm/yyyy}", p.DataPublicacao));


                }
                else
                {
                    @Html.Raw("Não");
                }

            </td>
            <td>
                <a href="/Post/Remover/@p.id">Remover</a>
                @Html.ActionLink("Remover", "RemovePost", new { id = p.id })
            </td>
            <td>
                <a href="/Post/Visualiza/@p.id">Editar</a>
            </td>
            <td>
                <a href="/Post/Publica/@p.id">Publicar</a>
                @Html.ActionLink("Publica", "Publicar", new { id = p.id })
            </td>
            @Html.ActionLink(p.Titulo, "Vizualiza", new { id = p.id })
            @Html.ActionLink("Incluir Post", "Novo")
            @*@model IList<Blog.Models.Post>*@
            <br>
        </tr>
    }
</tbody>
